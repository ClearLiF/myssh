{
  "name": "myssh",
  "version": "1.0.0",
  "description": "SSH 管理工具 - 基于 Electron + Vue 3 + Element Plus",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:all": "npm run build && electron-builder --mac --win --linux",
    "preview": "vite preview",
    "start": "electron ."
  },
  "keywords": [
    "ssh",
    "electron",
    "vue",
    "element-plus"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.0",
    "concurrently": "^8.2.0",
    "electron": "^27.3.11",
    "electron-builder": "^24.6.4",
    "vite": "^4.4.9",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "archiver": "^7.0.1",
    "electron-store": "^8.1.0",
    "element-plus": "^2.3.8",
    "hterm-umd": "^1.0.1",
    "is-stream": "^2.0.1",
    "node-ssh": "^13.1.0",
    "vue": "^3.3.4",
    "vuedraggable": "^4.1.0"
  },
  "build": {
    "appId": "com.example.myssh",
    "productName": "MySSH",
    "asar": false,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/*.md",
      "!node_modules/**/.git*",
      "!node_modules/**/example/**",
      "!node_modules/**/examples/**"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSLocalNetworkUsageDescription": "MySSH 需要访问本地网络以连接到局域网内的 SSH 服务器",
        "NSBonjourServices": ["_ssh._tcp."]
      },
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "win": {
      "artifactName": "${productName}-${version}-${arch}-win.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MySSH",
      "artifactName": "${productName}-${version}-setup.${ext}",
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": false,
      "warningsAsErrors": false
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    }
  }
}
